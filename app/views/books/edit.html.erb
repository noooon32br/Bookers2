<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>Editing Book</h1>
      
       <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
          <% end %>
      </ul>
      <% end %>
      
      <%= form_with model: @book do |f| %>

      <div class="form-group">
        <label for="book_title">Title</label><br />
        <%= f.text_field :title, style: "width:100%" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label><br />
        <%= f.text_area :body, style: "width:100%" %>
      </div>
      <div class="form-group">
      <%= f.submit 'Update Book', class:"btn btn-success" %>
      </div>

      <span class="link"><%= link_to 'Show', book_path(@book.id) %></span>|<span class="link"><%= link_to 'Back', books_path %></span>
      <% end %>
    </div>
  </div>
</div>
