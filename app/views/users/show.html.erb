<!DOCTYPE html>
<html>
  <body>

      <div class="container px-5 px-sm-0">
        <div  class="row">
          <div class="col-md-3">
            <h2>User info</h2>
            <%= image_tag @user.get_profile_image(100,100) %>
            <teble class="table">
              <tbody>
                <tr>
                </tr>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
            </teble>

            <div class="row">
              <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn btn-block" do %>
              <i class="fas fa-user-cog"></i>
              <% end %>
            <h2 class="mt-3">New book</h2>
            <% if @book.errors.any? %>
              <%= @book.errors.count %>errors prohibited this book from being saved:
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
                </ul>
            <% end %>
            <%= form_with model: @book do |f| %>
            <div class="from-group">
              <label for="book_title">Title</label><br />
            <%= f.text_field :title %>
            </div>
            <div class="from-group">
              <label for="book_opinion">Opinion</label><br />
            <%= f.text_area :body %>
            </div>

            <div class="form-group"><input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book"></div>
            </div>
            </form>
          </div>
          <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan-"3"></th>
                </tr>
              </thead>
              <tbody>
                <%= @books.each do |book| %>
                <%= image_tag @book.get_image %>
                <tr>
                  <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
                  <td><%= link_to book.title, book_path(@book.id) %></td>
                  <td><%= @book.user.name %></td>
                </tr>
                <% end %>
              </tbody>
            </table>

          </div>
        </div>
      </div>


      <% end %>
  </body>
</html>

